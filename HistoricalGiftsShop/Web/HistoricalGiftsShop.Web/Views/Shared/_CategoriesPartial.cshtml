@using System.Web

@model IEnumerable<HistoricalGiftsShop.Web.ViewModels.Categories.ProductInCategoryViewModel>

<div class="row">
    @{
        var controllerName = ((string)ViewData["controllerName"]);
        foreach (var product in Model)
        {
            <div class="col-sm-4 col-md-3">
                <div class="preview">
                    <a asp-controller="@controllerName" asp-action="ById" asp-route-id="@product.Id">
                        <div>
                            <img src="@product.ProductImageUrl" width="200" height="200" alt="@product.TitleValue" />
                        </div>
                    </a>
                    <h5>@product.TitleValue</h5>
                    <div class="price">@product.Price лв.</div>
                    @if (product.InStock)
                    {                        
                        <a href="#" onclick="updateCart('@product.Id')" class="btn btn-primary">
                            @product.AddButtonText
                        </a>
                        <input id="returnUrl" type="hidden" value="@HttpUtility.UrlDecode(Context.Request.Path)" />
                    }
                    else
                    {
                        <span class="btn btn-primary">@product.AddButtonText</span>
                    }
                </div>
            </div>
        }
    }
</div>

