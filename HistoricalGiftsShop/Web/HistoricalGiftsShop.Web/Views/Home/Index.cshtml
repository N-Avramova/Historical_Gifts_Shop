@using HistoricalGiftsShop.Common
@model HistoricalGiftsShop.Web.ViewModels.Home.IndexViewModel
@{
    this.ViewData["Title"] = $"Welcome to {GlobalConstants.SystemName}!";
}

<div class="text-center">
    <h1 class="display-3">@this.ViewData["Title"]</h1>
</div>

<div class="row">
    @foreach (var category in Model.Categories)
    {
        <div class="col-md-4 media">
            <a href="@category.Url" class="mr-3">
                <img src="@category.ImageUrl" width="150" height="150" alt="@category.Title" />
            </a>
            <div class="media-body">
                <h5 class="mt-0">
                    <a href="@category.Url">
                        @category.Title
                    </a>
                </h5>
                @category.Description
            </div>
        </div>
    }
</div>

